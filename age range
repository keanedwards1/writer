  <title>Poems by Age Range</title>
  <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
  <h1>Poems by Age Range</h1>
  
  <!-- Search input -->
  <input type="text" id="searchInput" placeholder="Search by age range">
  
  <!-- Age range containers -->
  <div class="age-range-container" id="ageRange1">
    <h2>8-13</h2>
    <ul id="poemsList1"></ul>
  </div>
  
  <!-- Repeat the above container structure for other age ranges -->

  <script src="script.js"></script>
</body>
